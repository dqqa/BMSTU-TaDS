{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build folder",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${fileDirname}/*.c",
                "-o",
                "${fileDirname}/app.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/gcc"
        }
    ]
}
